<div class="popup-content">
    <button class="close-btn">&times;</button>
    <h1>แก้ไขบริการ</h1>
    <form action="/service/edit/<%= service.id %>" method="POST">
        <label for="name">ชื่อบริการ:</label>
        <input type="text" id="name" name="name" value="<%= service.name %>" required>
        
        <label for="description">คำอธิบาย:</label>
        <input type="text" id="description" name="description" value="<%= service.description %>" required>
        
        <label for="detail">รายละเอียด:</label>
        <textarea id="detail" name="detail" required><%= service.detail %></textarea>
        
        <label for="price_estimate">ประมาณราคา:</label>
        <input type="text" id="price_estimate" name="price_estimate" value="<%= service.price_estimate %>" required>
        
        <label for="duration">ระยะเวลา:</label>
        <input type="text" id="duration" name="duration" value="<%= service.duration %>" required>
        
        <label for="recommendations">ข้อแนะนำ:</label>
        <textarea id="recommendations" name="recommendations" required><%= service.recommendations %></textarea>
        
        <button type="submit" class="btn">บันทึกการแก้ไข</button>
    </form>
</div>

<link rel="stylesheet" href="../service/edit.css">
